<Window xmlns:Controls="clr-namespace:hub_client.Windows.Controls" x:Class="hub_client.Windows.Brocante"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hub_client.Windows"
        mc:Ignorable="d"
        Title="Brocante" Height="621.68" Width="836.154"
        Loaded="Window_Loaded" Closing="Window_Closing" Icon="/hub-client;component/Assets/Icon/BCA.ico"
        >
    <Window.Background>
        <ImageBrush x:Name="bg_brush" Stretch="UniformToFill">
            <ImageBrush.ImageSource>
                <BitmapImage UriSource="pack://siteoforigin:,,,/Assets/Background/bg_brocante.jpg" CacheOption="OnLoad" CreateOptions="IgnoreImageCache"/>
            </ImageBrush.ImageSource>
        </ImageBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="212*"/>
            <RowDefinition Height="229*"/>
            <RowDefinition Height="77*"/>
        </Grid.RowDefinitions>
        <ListView x:Name="brocanteList" Grid.Row="0" Grid.Column="0" Margin="5" Background="#BFFFFFFF" SelectionChanged="brocanteList_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Vendeur :" DisplayMemberBinding="{Binding SellerName}"/>
                    <GridViewColumn Header="Carte :" DisplayMemberBinding="{Binding CardName}"/>
                    <GridViewColumn Header="Prix :" DisplayMemberBinding="{Binding Price}"/>
                    <GridViewColumn Header="Quantité :" DisplayMemberBinding="{Binding Quantity}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Controls:BCA_DisplayCardInfo x:Name="DisplayCardInfo" Grid.Row="1" />
        <Grid Grid.Row="2" Margin="0,0,0,1.8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Controls:BCA_ColorButton x:Name="btnSell" Grid.Column="0" Height="Auto" ButtonText="Vendre" Margin="40,0" MouseLeftButtonDown="btnSell_MouseLeftButtonDown" VerticalAlignment="Center"/>
            <Controls:BCA_ColorButton x:Name="btnBuy" Grid.Column="1" Height="Auto" ButtonText="Acheter" Margin="40,0" MouseLeftButtonDown="btnBuy_MouseLeftButtonDown" VerticalAlignment="Center"/>
            <Controls:BCA_ColorButton x:Name="btnMyCards" Grid.Column="2" Height="Auto" ButtonText="Mes cartes" Margin="40,0" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
