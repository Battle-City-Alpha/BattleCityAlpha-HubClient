<UserControl x:Class="hub_client.Windows.Controls.BCA_Listbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:hub_client.Windows.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border CornerRadius="15" BorderBrush="Black" BorderThickness="1">
        <Border.Background>
            <SolidColorBrush Color="#FFEBEBEB" Opacity="0.95"/>
        </Border.Background>
        <ListBox x:Name="lb" Background="{x:Null}" BorderBrush="{x:Null}" Margin="5" FontFamily="Dosis" FontSize="16" Foreground="Black"/>
    </Border>
</UserControl>
