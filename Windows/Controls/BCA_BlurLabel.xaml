<UserControl x:Class="hub_client.Windows.Controls.BCA_BlurLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:hub_client.Windows.Controls"
             mc:Ignorable="d" Height="34.427" Width="113.24">
    <Grid>
        <Label x:Name="lblBackground" Content="Some Text" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FF292929" Opacity="0.4">
            <Label.Effect>
                <BlurEffect Radius="20"/>
            </Label.Effect>
        </Label>
        <Label x:Name="lblText" Content="Some Text" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
    </Grid>
</UserControl>
