<UserControl x:Class="hub_client.Windows.Controls.BCA_BlurLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:hub_client.Windows.Controls"
             mc:Ignorable="d">
    <Grid>
        <Label x:Name="lblBackground" FontFamily="Dosis" Content="Some Text" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FF0600FF" Opacity="0.6">
            <Label.Effect>
                <BlurEffect Radius="30"/>
            </Label.Effect>
        </Label>
        <Label x:Name="lblText" FontFamily="Dosis" Content="Some Text" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</UserControl>
