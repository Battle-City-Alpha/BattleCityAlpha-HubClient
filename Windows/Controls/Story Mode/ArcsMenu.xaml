<UserControl x:Class="hub_client.Windows.Controls.Story_Mode.ArcsMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:hub_client.Windows.Controls.Story_Mode"
             xmlns:Items="clr-namespace:hub_client.Windows.Controls.Story_Mode.Items"
             mc:Ignorable="d" 
              Height="393" Width="500">
    <UserControl.Background>
        <ImageBrush Stretch="UniformToFill" ImageSource="pack://application:,,,/BCA_StoryMode;component/Assets/StoryMode/Menus/main_menu.png"/>
    </UserControl.Background>

    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10" HorizontalAlignment="Center">
        <Items:StoryModeArcsMenu x:Name="item_5DS" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10, 0"/>        
        <Items:StoryModeArcsMenu x:Name="item_GX" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10, 0"/>        
    </StackPanel>
</UserControl>