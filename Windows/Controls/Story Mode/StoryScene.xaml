<UserControl x:Class="hub_client.Windows.Controls.Story_Mode.StoryScene"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:hub_client.Windows.Controls.Story_Mode"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600" Background="{x:Null}">
    <Border Padding="10,0" CornerRadius="0" BorderThickness="0" BorderBrush="Black" x:Name="bg_border">
        <Border.Background>
            <ImageBrush Stretch="UniformToFill"/>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Image Panel.ZIndex="2" x:Name="character_pic_left" Grid.Row="1" Stretch="Uniform" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Margin="5"/>
            <Image Panel.ZIndex="1" x:Name="character_pic_right" Grid.Row="1" Stretch="Uniform" HorizontalAlignment="Right" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Margin="5" />
        </Grid>
    </Border>
</UserControl>
