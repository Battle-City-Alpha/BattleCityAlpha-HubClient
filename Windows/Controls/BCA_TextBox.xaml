<UserControl x:Class="hub_client.Windows.Controls.BCA_TextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:hub_client.Windows.Controls"
             mc:Ignorable="d" >
    <Border CornerRadius="5" BorderBrush="Black" BorderThickness="1">
        <Border.Background>
            <SolidColorBrush Color="#FFEBEBEB" Opacity="0.95"/>
        </Border.Background>
        <TextBox x:Name="tbChat" Background="{x:Null}" Margin="5" Foreground="Black" FontSize="14" BorderBrush="{x:Null}" BorderThickness="0">

        </TextBox>
    </Border>
</UserControl>
